
<div class="profile_container ">
  <div class="profile_card">
    <div class="profile_name d-flex flex-column justify-content-center align-items-center">Welcome to TripTies</div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <%= cl_image_tag @user.photo.key, height: 150, width: 150, radius:"max", background:"#efefef"%>
      <%= link_to edit_user_registration_path do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>
    <div class="details">
      <span class="profile_name mt-3"><%= @user.fullname.capitalize %></span>
      <span class="idd"><%= @user.email %></span>
      <div class="d-flex flex-row justify-content-center align-items-center gap-2">
        <span class="idd1"><%= @user.age %> years old</span>
      </div>
      <div class=" px-2 rounded mt-4 date ">
        <span class="join"> Joined <%=@joined%></span>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
