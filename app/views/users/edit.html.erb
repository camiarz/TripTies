<%= cl_image_tag current_user.photo.key, height: 150, width: 200, crop: :fill %>
<%= simple_form_for([current_user]) do |form| %>
    <%= form.input :photo, as: :file %>
    <%= form.input :first_name%>
    <%= form.input :last_name%>
    <%= form.input :interests, collection: @interests, as: :check_boxes %>

    <%= form.button :submit, 'Update profile', class: 'btn btn-primary w-100' %>

  <% end %>
