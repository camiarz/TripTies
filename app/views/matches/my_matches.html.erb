<div class="title"><h1>My Matches</h1></div>
<div class="container-fluid">
  <% @my_matches.each do |match| %>
    <%= link_to match_chatroom_path(match, match.chatroom) do %>
      <div class="match-card">
        <% if current_user == match.user1 %>
            <img class="card-img-left avatar-match" src="<%= cl_image_path match.user2.photo.key%>"/>
        <% else %>
          <img class="card-img-left avatar-match" src="<%= cl_image_path match.user1.photo.key%>"/>
        <% end %>
        <% if current_user == match.user1 %>
          <%= match.user2.fullname %>
        <% else %>
          <%= match.user1.fullname %>
        <% end %>
      </div>
    <% end%>
  <% end%>
</div>
