<div class="title">
<h2><strong>My trips</strong></h2>
</div>


<% @trips.each do |trip| %>
  <div class="container" >
      <div class="card mb-3 p-2" style=" justify-content: center;">

          <div class="trip-destination"><strong>Destination:</strong> <%= trip.destination %></div>
          <strong>Trip Duration:</strong><div class="trip-arrival"><%= trip.arrival %></div>
          <div class="trip-departure"><%= trip.departure %></div>
           <div class="interest"><% trip.interests.each do |interest| %>
            <%= interest.name %>
            <% end %>
           </div>

          <div class= "buttons-my-trips">
            <%# <%= link_to "Match Buddies", traveler_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", trips_path(current_user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <%= link_to "✏️", edit_trip_path(trip) %>
            <%= link_to "Delete", @trip, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

          </div>

      </div>
    </div>
<% end %>
